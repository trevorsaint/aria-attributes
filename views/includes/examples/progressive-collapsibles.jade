        <!-- without javascript -->
        <div class="collapsible-item">
          
          <div class="collapsible-heading">
            <h3>You have been given access to Agri Agents Ltd</h3>
          </div>
          
          <div class="collapsible-content">
            <p>Some content goes here...</p>
          </div>
          
        </div>
        
        <!-- with javascript -->
        <div class="collapsible-item">
          
